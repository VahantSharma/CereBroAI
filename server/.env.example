# Node.js Backend Environment Variables

# Node environment
NODE_ENV=development

# Server configuration
PORT=5000

# Database configuration
MONGODB_URI=mongodb://localhost:27017/cerebro-ai
# or for Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/cerebro-ai

# JWT configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d

# ML Service
ML_SERVICE_URL=http://localhost:6000

# Email service (if applicable)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# CORS
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:5173

# Email Configuration
EMAIL_FROM=your-app-email@gmail.com
EMAIL_TO=your-personal-email@example.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_SECURE=true 